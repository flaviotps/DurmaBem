<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flaviotps.sleepwell">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.flaviotps.sleepwell.ui.main.MainActivity" />

        <service
            android:name="com.flaviotps.sleepwell.services.SoundService"
            android:enabled="true">
            <intent-filter>
                <action android:name="ACTION_PLAY_PAUSE"/>
                <action android:name="ACTION_CLOSE"/>
                <action android:name="ACTION_EDIT"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.flaviotps.sleepwell.ui.splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>